{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "title": "Countries",
    "additionalItems": true,
    "items": {
        "$id": "#/items",
        "anyOf": [
            {
                "$id": "#/items/anyOf/0",
                "type": "object",
                "title": "The first anyOf schema",
                "required": [
                    "code",
                    "name"
                ],
                "properties": {
                    "code": {
                        "$id": "#/items/anyOf/0/properties/code",
                        "type": "string",
                        "title": "Country"
                    },
                    "name": {
                        "$id": "#/items/anyOf/0/properties/name",
                        "type": "string",
                        "title": "country name"
                    }
                },
                "additionalProperties": false
            }
        ]
    }
}